#!/bin/sh

start()
{

	while [ ! -e /dev/mmcblk0p1 ];
	do
		sleep 1
	done

	while [ ! -e /dev/mmcblk0p2 ];
	do
		sleep 1
	done

	# wait a bit for mount
	sleep 1

	mount -a
}

case "$1" in
	start)
		start
		;;
	stop)
		;;
	restart|reload)
		start
		;;
	*)
		echo "Usage: $0 {start|stop|restart|reload}" >&2
		exit 1
		;;
esac
